<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomRadioButton">
        <item name="android:button">@null</item> <!-- removes default circle -->
        <item name="android:background">@drawable/custom_radio_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="App.Theme.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="App.Animation.BottomSheet" parent="android:Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


</resources>